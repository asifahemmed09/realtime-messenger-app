{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src", "src/@types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
